<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myProgress="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_top_title" />


    <com.dgz.kttest.myView.RadarView
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <com.dgz.kttest.myView.MyProgress
        android:id="@+id/prog_myProgress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        myProgress:defaultPercent="10.0"
        myProgress:bgColor="#21867E"
        myProgress:topColor="@color/colorPrimary"
        myProgress:textColor="#ffffff"

        />
    <Button
        android:id="@+id/btn_add_producer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮1" />

    <Button
        android:id="@+id/btn_add_consumer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="按钮2" />
    <com.dgz.kttest.myView.MySurfaceView
        android:id="@+id/sb_mysv"
        android:layout_width="300dp"
        android:layout_height="300dp" />

</LinearLayout>
